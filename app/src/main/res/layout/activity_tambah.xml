<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="16dp"
    android:orientation="vertical"
    tools:context=".TambahActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/id_tgl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Tanggal"
            android:focusable="false"
            android:inputType="date"
            android:layout_weight="1"
            android:ems="12"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/id_jam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Jam"
            android:focusable="false"
            android:inputType="time"
            android:layout_weight="1"
            android:ems="12"
            android:textColor="@android:color/black" />
    </LinearLayout>


    <EditText
        android:id="@+id/id_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:hint="Pengguna"
        android:textColor="@android:color/black" />

    <Spinner
        android:id="@+id/id_kategori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:entries="@array/kategori" />

    <EditText
        android:id="@+id/id_ket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Keterangan"
        android:textColor="@android:color/black"
        android:inputType="text|textMultiLine|textCapSentences"
        android:maxLength="21"
        android:maxLines="5"
        android:gravity="left"
        />
    <EditText
        android:id="@+id/id_jam_selesai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Jam Penanganan"
        android:inputType="time"
        android:textColor="@android:color/black"
        android:maxLength="21"
        android:maxLines="5"
        android:focusable="false"
        android:gravity="left" />

    <EditText
        android:id="@+id/id_solusi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Solusi"
        android:textColor="@android:color/black"
        android:inputType="text|textMultiLine|textCapSentences"
        android:maxLength="21"
        android:maxLines="5"
        android:gravity="left" />
</LinearLayout>